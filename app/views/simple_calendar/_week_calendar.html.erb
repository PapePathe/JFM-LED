<div class="simple-calendar">

  <div class="calendar-heading">
    <%= link_to "Previous", url_for(params.permit(:start_date).merge(start_date: date_range.first - 1.day)), remote: true %>
      Week <%= start_date.strftime("%U").to_i %>
    <%= link_to "Next", url_for(params.permit(:start_date).merge(start_date: date_range.last + 1.day)), remote: true %>  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Technicien</th>
        <% week_days.each do |day| %>
          <% unless day == "dimanche" || day == "samedi" %>
            <th><%= day %></th>
          <% end %>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <td class="no-padding">
            <% @techs.to_a.sort_by(&:id).each do |t| %>
              <div class="tech-card">
                <p><strong><%= t.first_name %> <%= t.last_name %></strong></p>
              </div>
            <% end %>
          </td>

          <% week.each do |day| %>
            <% unless weekend?(day) %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                  <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
                <% else %>
                  <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
