<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Role</th>
      <th scope="col">Téléphone</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <th scope="row">1</th>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.role %></td>
        <td><%= user.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>
