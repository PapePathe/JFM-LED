    <%= render "shared/sidebar-button", text: "Rapports", icon: "folder-open", link: technician_reports_path%>
    <%= render "shared/sidebar-button", text: "Clients", icon: "group", link: technician_users_path%>
    <%= render "shared/sidebar-button", text: "Profil", icon: "user", link: technician_user_path(@user)%>
  <% elsif current_user.manager? %>
    <%= render "shared/sidebar-button", text: "Dashboard", icon: "eye", link: manager_user_path(@user) %>
    <%= render "shared/sidebar-button", text: "Disponibilités", icon: "calendar", link: manager_availabilities_path %>
    <%= render "shared/sidebar-button", text: "Bookings", icon: "list", link: manager_bookings_path%>
    <%= render "shared/sidebar-button", text: "Rapports", icon: "folder-open", link: manager_reports_path%>
    <%= render "shared/sidebar-button", text: "Clients", icon: "group", link: manager_users_path%>
    <%= render "shared/sidebar-button", text: "Profil", icon: "user", link: manager_user_path(@user)%>
  <% end %>
