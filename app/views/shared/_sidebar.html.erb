<div class="sidebar">
  <% if current_user.particulier? %>
    <%= render "shared/sidebar-button", text: "Ma détection", icon: "eye", link: particulier_user_path(@user) %>
    <%= render "shared/sidebar-button", text: "Mon profil", icon: "user", link: particulier_user_path(@user)%>
