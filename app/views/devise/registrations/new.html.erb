<div class="full-screen-wrapper-with-navbar background-login flexbox">
  <div class="sign-up-box">
    <div class="login-top">
      <%= render "devise/shared/links" %>
    </div>
    <div class="container text-center">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>


      <h4 class="padding-box"><strong>Nouvel utilisateur</strong></h4>
      <div class="form-group">
        <div class="form-inline">
          Je suis un.. <%= f.input :role, label: false, placeholder: "pro", collection: ["particulier", "pro", "technician", "manager"] %>
        </div>
      </div>

      <div class="col-xs-6">
        <h4><strong>A propos de moi</strong></h4>
        <div class="form-input"></div>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :first_name, label: "Prénom", required: true %>
        <%= f.input :last_name, label: "Nom", required: true %>
        <%= f.input :phone %>
      </div>

      <div class="col-xs-6">
        <h4><strong>A propos de mon entreprise</strong></h4>
        <%= f.input :company_id, label: "Entreprise", collection: Company.all.to_a, label_method: lambda { |company| "#{company.name}" } %>
        <%= f.input :branch_id, label: "Branche", collection: Branch.all.to_a, label_method: lambda { |branch| "#{branch.name}" } %>
        <%= f.input :password, required: true, label: "Mot de passe", hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true, label: "Confirmation du mot de passe" %>
      </div>

      <div class="form-actions padding-box">
        <%= f.button :submit, "Créer mon compte" %>
      </div>

    </div>
    <% end %>


  </div>
</div>


