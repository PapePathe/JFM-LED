<div class="dashboard-wrap">
  <%= render "shared/sidebar"%>

  <div class="dashboard-content with_right_sidebar">
    <div class="padding-box">
      <%= render "shared/report", booking: @booking, client: @client, tech: @tech %>
      <% if @report.photos? %>
        <%= "Le rapport contient #{@report.photos.size} photo" %>
        <% @report.photos.each do |photo| %>
          <%= cl_image_tag photo.path, width: 200, height: 300, crop: :fill %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
