<div class="dashboard-wrap">
  <%= render "/shared/sidebar"%>

  <div class="dashboard-content">
    <div class="padding-box">
      <h3 class="text-center">Technician#Availabilities#index</h3>
    </div>

    <%= month_calendar(attribute: :date, events: @availabilities) do |date, availabilities| %>
      <div class="date-day"><%= date.day %></div>


      <% availabilities.each do |availability| %>
        <div>
          <%= availability.date %>
          <%= availability.half %>
          <%= availability.status %>
        </div>
        <%= simple_form_for([@user.role, availability]) do |f| %>
          <%= f.hidden_field :status, value: !availability.status %>
          <%= f.submit %>
        <% end %>
      <% end %>
    <% end %>

  </div>
</div>
