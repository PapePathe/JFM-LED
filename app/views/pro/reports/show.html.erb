<div class="dashboard-wrap">
  <%= render "shared/sidebar"%>
  <%= render "shared/sidebar_forjs"%>

  <div class="dashboard-content with_right_sidebar">
    <div class="padding-box">
      <%= content_for :rapport do %>
        <h1 class="text-center">Rapport de MP <%= @report.id %>
          <% if @user.technician? %>
            <%= link_to(content_tag(:i, nil, class: 'fa fa-pencil'), edit_technician_report_path(@report))%>
          <% end %>
        </h1>

        <!-- FORM -->
        <% @sections.each do |section| %>
          <div id="Section-<%= section.id %>" class="tabcontent card-note card-line text-center">
            <h3 class="underline"><%= section.name.capitalize %></h3>
            <% section.questions.each do |q| %>
              <div class="text-left">
                <h5><%= q.name %></h5>
                <% if q.answers.where(report_id: @report.id).first.nil? %>
                  <p>-------</p>
                <% elsif q.answers.where(report_id: @report.id).first.string %>
                  <p><%= q.answers.where(report_id: @report.id).first.string %></p>
                <% else %>
                  <p><%= q.answers.where(report_id: @report.id).first.string %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <%= yield :rapport %>
      <%= link_to 'Create PDF document', pro_report_path(@report, :format => :pdf) %>
    </div>
  </div>
</div>
